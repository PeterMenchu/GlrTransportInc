@page
@using GlrTransportInc.Models
@model GlrTransportInc.Pages.Manage_Users.DeleteModel
@inject SignInManager<UserModel> SignInManager
@{
}
<br />
@if (SignInManager.IsSignedIn(User))
{
    @if (DeleteModel.Position == "Manager" || IndexModel.Position == "Dev")
    {
        <h3>Are you sure you want to delete this user?</h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserModel.Name)
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserModel.Email)
                </dd>
                <dt class="col-sm-2">
                    Position
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserModel.Position)
                </dd>
            </dl>
        </div>
    
        <form method="post">
            <input type="hidden" asp-for="UserModel.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    }
    else
    {
        <div class="main text-center">
            <p>Unauthorized.</p>
        </div>
    }
}
else
{
    <div class="main text-center">
        <h1 class="text-center">Driver Directory</h1>
        <p>You must log in to an account to view this.</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="p text-success">Click here to log in</a>
    </div>
}