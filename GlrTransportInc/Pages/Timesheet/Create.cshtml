@page
@model GlrTransportInc.CreateModel
@using GlrTransportInc.Models
@inject SignInManager<UserModel> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <h4>Timesheet</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Timesheet.Total" class="form-control" value="0" />
        <input type="hidden" asp-for="Timesheet.PayDate" class="form-control" value="@DateTime.Now" />
        <input type="hidden" asp-for="Timesheet.NetPay" class="form-control" value="0.0" />
        <input type="hidden" asp-for="Timesheet.DaysOff" class="form-control" value="0" />
        <div class="container-fluid">
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Timesheet.Week" class="control-label">Week of:</label>
                        <input type="date" asp-for="Timesheet.Week" class="form-control" />
                        <span asp-validation-for="Timesheet.Week" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h5>Friday:</h5> <br />
                    <h6>Hrs.</h6>
                    <input asp-for="Timesheet.Hours1" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Hours1" class="text-danger"></span>
                    <br />
                    <textarea asp-for="Timesheet.Comments1" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Timesheet.Comments1" class="text-danger"></span>
                    <br />
                    <h6>#jobs:</h6>
                    <input asp-for="Timesheet.Jobs1" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Jobs1" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h5>Monday:</h5> <br />
                    <h6>Hrs.</h6>
                    <input asp-for="Timesheet.Hours2" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Hours2" class="text-danger"></span>
                    <br />
                    <textarea asp-for="Timesheet.Comments2" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Timesheet.Comments2" class="text-danger"></span>
                    <br />
                    <h6>#jobs:</h6>
                    <input asp-for="Timesheet.Jobs2" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Jobs2" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h5>Tuesday:</h5> <br />
                    <h6>Hrs.</h6>
                    <input asp-for="Timesheet.Hours3" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Hours3" class="text-danger"></span>
                    <br />
                    <textarea asp-for="Timesheet.Comments3" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Timesheet.Comments3" class="text-danger"></span>
                    <br />
                    <h6>#jobs:</h6>
                    <input asp-for="Timesheet.Jobs3" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Jobs3" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h5>Wednesday:</h5> <br />
                    <h6>Hrs.</h6>
                    <input asp-for="Timesheet.Hours4" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Hours4" class="text-danger"></span>
                    <br />
                    <textarea asp-for="Timesheet.Comments4" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Timesheet.Comments4" class="text-danger"></span>
                    <br />
                    <h6>#jobs:</h6>
                    <input asp-for="Timesheet.Jobs4" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Jobs4" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h5>Thursday:</h5> <br />
                    <h6>Hrs.</h6>
                    <input asp-for="Timesheet.Hours5" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Hours5" class="text-danger"></span>
                    <br />
                    <textarea asp-for="Timesheet.Comments5" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Timesheet.Comments5" class="text-danger"></span>
                    <br />
                    <h6>#jobs:</h6>
                    <input asp-for="Timesheet.Jobs5" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Jobs5" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h6>Total hours:</h6>
                    <input asp-for="Timesheet.TotalHours" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.TotalHours" class="text-danger"></span>
                    <br /><h6>$ /hr.</h6>
                    <input asp-for="Timesheet.PerHour" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.PerHour" class="text-danger"></span>
                    <br /><h6>If 40 hrs. then $ /hr.</h6>
                    <input asp-for="Timesheet.Over40PerHour" class="form-control" value="0" />
                    <span asp-validation-for="Timesheet.Over40PerHour" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <br />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
}
else
{
    <body>
        <div class="main text-center">
            <p>You must log in to create a timesheet.</p>
            <a asp-page="/LoginPage" class="p text-success">Click here to log in</a>
        </div>
    </body>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
