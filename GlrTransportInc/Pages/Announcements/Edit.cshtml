@page
@model GlrTransportInc.EditModel2
@using GlrTransportInc.Models
@inject SignInManager<UserModel> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    @if ((User.FindFirst("Name").Value == Model.Announcement.Author))
    {
        <h4>Announcement</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Announcement.ID" />
                    <div class="form-group">
                        <label asp-for="Announcement.Title" class="control-label"></label>
                        <input asp-for="Announcement.Title" class="form-control" />
                        <span asp-validation-for="Announcement.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.Author" class="control-label"></label>
                        <input asp-for="Announcement.Author" class="form-control" />
                        <span asp-validation-for="Announcement.Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.DatePosted" class="control-label"></label>
                        <input asp-for="Announcement.DatePosted" class="form-control" />
                        <span asp-validation-for="Announcement.DatePosted" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Announcement.Post" class="control-label"></label>
                        <input asp-for="Announcement.Post" class="form-control" />
                        <span asp-validation-for="Announcement.Post" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    }
    else
    {
        <div class="main text-center">
            <p>You must have created the post to edit the post</p>
        </div>
    }
}
else
{
    <div class="main text-center">
        <h1 class="text-center">Edit a post</h1>
        <p>You must log in to edi a post</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="p text-success">Click here to log in</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
