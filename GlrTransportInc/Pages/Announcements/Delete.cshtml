@page
@model GlrTransportInc.DeleteModel2
@using GlrTransportInc.Models
@inject SignInManager<UserModel> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    @if ((DeleteModel2.Name == Model.Announcement.Author) || DeleteModel2.Position == "Manager")
    {

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Announcement</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Announcement.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Announcement.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Announcement.Author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Announcement.Author)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Announcement.DatePosted)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Announcement.DatePosted)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Announcement.Post)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Announcement.Post)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Announcement.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    }
    else
    {
        <div class="main text-center">
            <p>You must have created the post, or be a manager to delete the post</p>
        </div>
    }
}
else
{
    <div class="main text-center">
        <h1 class="text-center">Delete a post</h1>
        <p>You must log in to delete a post</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="p text-success">Click here to log in</a>
    </div>
}