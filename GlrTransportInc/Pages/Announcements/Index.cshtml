@page
@model GlrTransportInc.IndexModel2
@using GlrTransportInc.Models
@inject SignInManager<UserModel> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <br />
    <p>
        <a asp-page="Create" class="btn btn-primary btn-lg btn-block bg-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Announcements
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Announcement)
            {
                <tr>
                    <td>
                        <div class="container-fluid">
                            <div class="row">
                                <h1>@item.Title</h1>
                            </div>
                            <div class="row">
                                By: @item.Author | Posted: @item.DatePosted
                            </div>
                            <div class="row">
                                @Html.DisplayFor(modelItem => item.Post)
                            </div>
                            @if ((User.FindFirst("Name").Value == item.Author))
                            {
                                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                            }
                            @if ((User.FindFirst("Name").Value == item.Author) || User.FindFirst("Position").Value == "Manager")
                            {
                                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <body>
        <div class="main text-center">
            <p>You must log in to view announcements.</p>
            <a asp-page="/LoginPage" class="p text-success">Click here to log in</a>
        </div>
    </body>
}
